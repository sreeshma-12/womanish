<script>
    function search_it(event, element, force=false) {
        const url = null
        if(force || event.keyCode == 13) {
            addParam("search", element.value, event, url)
        }
    }
    
    function addParam(key, type, event=null, url=null) {
        event?.preventDefault()
        url = new URL(url || window.location.href)
        url.searchParams.set(key, type)
        window.location.href = url.toString()
    }

