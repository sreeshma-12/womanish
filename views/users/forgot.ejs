<div
  style="
    font-family: 'Roboto', sans-serif;
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
  "
>
  <h1 style="text-align: center; color: #333">Forgot Password</h1>
  <% if (typeof message !== 'undefined') { %>
  <h4 style="text-align: center; color: #666"><%= message %></h4>
  <% } %>
  <form action="/forgot" method="post" style="text-align: center">
    <input
      type="text"
      name="email"
      placeholder="Enter email"
      style="
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      "
      required
    />
    <br /><br />
    <input
      type="submit"
      value="Send Reset Link"
      style="
        width: 100%;
        padding: 10px;
        background-color: #4caf50;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      "
    />
  </form>

  <p style="text-align: center; margin-top: 20px">
    Remember your password? <a href="/login">Log in</a>
  </p>
</div>
