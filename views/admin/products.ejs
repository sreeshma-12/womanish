<%- include('../admin/layout/header.ejs', { active: 'products' }) -%>
<div class="page-content">
  <div class="bg-dash-dark-2 py-4">
    <div class="container-fluid d-flex justify-content-between">
      <h2 class="h5 mb-0">Products List</h2>
      <a href="/admin/new-products" class="btn btn-warning me-3">Add product</a>
    </div>
  </div>
  <div class="container p-5 ">
    <table id="myTable" class="table table-striped table-bordered table-responsive table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Stock</th>
          <!-- <th scope="col">Status</th> -->
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(function(product,i) { %>
      <tr>
            <td>
            <%= i+1 %>
          </td>
          <td>
            <img style="width:50px; height:50px;" src="/images/<%= product.image[0]%>">
          </td>
          <td>
            <%= product.name %>
          </td>
         <td>
        <%= product.brand.categoryName %> 
          </td> 
          <td>
            <%= product.price %>
          </td>
          <td>
            <%= product.stock %>
          </td>
           <td>
            <% if (product.stock > 0 ) { %>
            <p class="text-success">In stock</p>
            <% } else { %>
            <p class="text-danger">Out of stock</p>
            <% } %>
          </td> 
          <td>
            <div class="d-flex flex-lg-row">
              <form action="/admin/edit-product/<%= product._id %>" method="get">
                <button type="submit" class="btn btn-outline-success" style="width: 110px;">Edit</button>
              </form>
              <!-- <form action="/delete-product/<%= product._id %>" method="post"> -->
                <td><a href="/admin/delete-product/<%= product._id %>" class="btn btn-danger" onclick="return confirm('Are you sure want to delete ?')">Delete</a></td>               
                <!-- <button type="submit" class="btn btn-outline-danger ms-2">Delete</button> -->
              <!-- </form> -->
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%- include('../admin/layout/footer.ejs') -%>
